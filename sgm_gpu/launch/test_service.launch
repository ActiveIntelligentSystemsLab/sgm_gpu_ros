<?xml version="1.0"?>

<launch>
  <node name="sgm_gpu_server" pkg="sgm_gpu" type="sgm_gpu_server"/>

  <node name="service_client" pkg="sgm_gpu" type="disparity_service_test_client">
    <param name="image_transport" value="compressed"/>
    <remap from="estimate_disparity" to="sgm_gpu_server/estimate_disparity"/>
    <remap from="left_image" to="stereo_robot/mobile_base/camera/left/image_raw"/>
    <remap from="right_image" to="stereo_robot/mobile_base/camera/right/image_raw"/>
  </node>

  <node name="bag_player" pkg="rosbag" type="play" args="--loop $(find sgm_gpu)/data/test_input.bag"/>

  <node name="disparity_viewer" pkg="image_view" type="disparity_view">
    <remap from="image" to="service_client/disparity"/>
  </node>
</launch>
